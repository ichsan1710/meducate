<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/app.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <header class="header">
      <section class="flex">
        <a href="/users/role/home" class="logo">Meducate</a>

        <div class="icons">
          <div id="user-btn" class="fas fa-user"></div>
        </div>

        <div class="profile">
          <img src="/asset/Pas Foto.jpg" class="image" alt="" />
            <h3 class="name"><%= user.email %></h3>
            <p class="role"><%= user.role %></p>
          <a href="/users/role/profile" class="btn btn-primary">view profile</a>
          <div class="flex-btn">
            <a href="/users/logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
      </section>
    </header>

    <section class="home-section">
      <div class="welcome-msg">
        <h1>Welcome to MEDUCATE</h1>
        <p>
          Medical Students from all over the world use us every day to excel in
          their medical studies and exam prep
        </p>

        <a
          class="btn btn-success"
          href="/users/role/courses"
          style="max-width: 300px"
          >Explore All Course</a
        >
      </div>
      <div class="welcome-msg">
        <h1>Course Active</h1>
        <div class="row">
          <% enrollments.forEach(element => { %>
          <div class="col-md-4">
            <div class="card course-card">
              <div class="card-body">
                <h5 class="card-title"><%= element.course.title %></h5>
                <p class="card-text"><%= element.course.description %></p>
                <span class="card-text badge bg-warning"><%= element.id %></span><br>
                <a href="/users/role/course/learnmore/detail/<%= element.course.id %>" class="btn btn-primary">Learn More</a>
                <a href="/users/role/course/confirm/<%= element.id %>" class="btn btn-danger">Finish</a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <script src="/javascripts/index.js"></script>
  </body>
</html>
